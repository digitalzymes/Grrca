<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Home</title>
    <style>
        body {
            background: linear-gradient(45deg, #e0e0e0 0%, #979a9b 50%, #8e9193 100%);
            min-height: 100vh;
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
        }

        .container {
            padding: 8rem 2rem;
        }
        h1.welcome {
            color: #fff;
            text-align: center;
            font-weight: bold;
            margin-bottom: 3rem;
            margin-left: 17rem;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.3);
            animation: fadeInDown 1s ease;
        }
        .blog-list {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            max-width: 1000px;
            margin: 0 auto;
            margin-left: 17rem;
        }
        .blog-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 0;
            border-bottom: 1px solid #e0e0e0;
        }
        .blog-item:last-child {
            border-bottom: none;
        }
        .blog-title {
            color: #344320;
            font-size: 1.2rem;
            font-weight: 500;
            text-decoration: none;
            transition: color 0.3s ease;
        }
        .blog-title:hover {
            color: #2062e7;
        }
        .action-buttons {
            display: flex;
            gap: 0.5rem;
        }
        .btn {
            font-size: 0.9rem;
            padding: 5px 10px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }
        .btn-warning {
            background: #1744e7;
            border: none;
            color: #fff;
        }
        .btn-warning:hover {
            color : #fff;
            background: #150252;
        }
        .btn-danger {
            background: #dc3545;
            border: none;
            color: #fff;
        }
        .btn-danger:hover {
            background: #b02a37;
        }
        @keyframes fadeInDown {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body>
    <%- include('./partials/nav.ejs') %>

    <div class="container">
        <h1 class="welcome">Welcome to Raj Raghunath and Co.</h1>
        <div class="blog-list">
            <% blogs.forEach(blog => { %>
                <div class="blog-item">
                    <a href="/blog/<%= blog._id %>" class="blog-title"><%= blog.title %></a>
                    <% if (user && user._id.toString() === blog.createdBy.toString()) { %>
                        <div class="action-buttons">
                            <a href="/blog/edit/<%= blog._id %>" class="btn btn-warning">Edit</a>
                            <form action="/blog/delete/<%= blog._id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this blog?');">Delete</button>
                            </form>
                        </div>
                    <% } %>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/scripts.ejs') %>
</body>
</html>